@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">

                <a href="#" class="navbar-link dropdown-toggle" data-toggle="dropdown" id="dropdownnav"> Hello @User.Identity.GetUserName() ! </a>
                <div class="dropdown-menu">
                    <ul class="dropdown-item">
                        <li><a href="#">Update Profile</a></li>
                        <li><a href="#">Change Password</a></li>
                    </ul>
                </div>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("SignUp", "Create", "AspNetUsers", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
}

